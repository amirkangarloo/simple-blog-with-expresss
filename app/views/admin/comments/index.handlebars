<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> Comments <small>Manage Blog
                        Comments</small>
                </h1>
            </div>
            <div class="col-md-2">
                <div class="dropdown create">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Create Content
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a type="button" data-toggle="modal" data-target="#addPost">Add Post</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li class="active">Comments</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/admin/dashboard" class="list-group-item">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Dashboard
                    </a>
                    <a href="/admin/posts" class="list-group-item"><span class="glyphicon glyphicon-pencil"
                            aria-hidden="true"></span> Posts </a>
                    <a href="/admin/comments" class="list-group-item active main-color-bg"><span
                            class="glyphicon glyphicon-comment" aria-hidden="true"></span> Comments </a>
                    <a href="/admin/users" class="list-group-item"><span class="glyphicon glyphicon-user"
                            aria-hidden="true"></span> Users </a>
                    <a href="/admin/settings" class="list-group-item"><span class="glyphicon glyphicon-wrench"
                            aria-hidden="true"></span>
                        Settings <span class="badge"></span></a>
                </div>
            </div>
            <div class="col-md-9">
                <!-- Website Overview-->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Comments</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>Author</th>
                                <th>Comment</th>
                                <th>Article</th>
                                <th>Created</th>
                                <th></th>
                            </tr>
                            {{#each comments}}
                            <tr>
                                <td> {{this.user_name}} </td>
                                <td>
                                    <p>
                                        {{this.comment}}
                                    </p>
                                </td>
                                <td> {{this.title}} </td>
                                <td> {{this.created}} </td>
                                <td>
                                    <a class="btn btn-default" href="#">Confirm</a> 
                                    <a class="btn btn-default" href="#">Reject</a> 
                                    <a class="btn btn-danger" href="#">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>