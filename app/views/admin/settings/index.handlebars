<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Settings <small>Manage Your
                        Settings</small>
                </h1>
            </div>
            <div class="col-md-2">
                <div class="dropdown create">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Create Content
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a type="button" data-toggle="modal" data-target="#addPost">Add Post</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li class="active">Settings</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/admin/dashboard" class="list-group-item">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Dashboard
                    </a>
                    <a href="/admin/posts" class="list-group-item"><span class="glyphicon glyphicon-pencil"
                            aria-hidden="true"></span> Posts </a>
                    <a href="/admin/comments" class="list-group-item"><span class="glyphicon glyphicon-comment"
                            aria-hidden="true"></span> Comments </a>
                    <a href="/admin/users" class="list-group-item"><span class="glyphicon glyphicon-user"
                            aria-hidden="true"></span> Users </a>
                    <a href="/admin/settings" class="list-group-item active main-color-bg"><span
                            class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                        Settings <span class="badge"></span></a>
                </div>
            </div>
            <div class="col-md-9">
                <!-- Website Overview-->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Settings</h3>
                    </div>
                    <div class="panel-body">
                        <form action="/admin/settings" method="POST">
                            <div class="row">
                                <div class="col-md-12">
                                    Website name
                                    <input name="website_title" class="form-control" type="text"
                                        placeholder="Website name" value="{{config.website_title}}">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-12">
                                    Number of article in page
                                    <input name="posts_per_page" class="form-control" type="number" placeholder="10" value="{{config.posts_per_page}}">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-12">
                                    Description
                                    <textarea name="website_description" class="form-control" name="" id="" cols="30"
                                        rows="5" placeholder="About your website">{{config.website_description}}</textarea>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-12">
                                    <input name="users_can_register" type="checkbox" value="{{settingStatus.TRUE}}" {{#isChecked config.users_can_register}} checked {{/isChecked}}> Anyone can register
                                </div>
                                <div class="col-md-12">
                                    <input name="users_can_submit_comments" type="checkbox" value="{{settingStatus.TRUE}}" {{#isChecked config.users_can_submit_comments}} checked {{/isChecked}}> Only users can post
                                    comments
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>