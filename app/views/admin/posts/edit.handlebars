<header id="header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><span class="glyphicon glyphicon-text-width" aria-hidden="true"></span> Edit Post<small> Edit old
            article</small></h1>
      </div>
    </div>
  </div>
</header>

<section id="breadcrumb">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/admin/dashboard">Dashboard</a></li>
      <li><a href="/admin/posts">Posts</a></li>
      <li class="active">Edit Post</li>
    </ol>
  </div>
</section>

<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <a href="/admin/dashboard" class="list-group-item">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Dashboard
          </a>
          <a href="/admin/posts" class="list-group-item"><span class="glyphicon glyphicon-pencil"
              aria-hidden="true"></span> Posts </a>
          <a href="/admin/comments" class="list-group-item"><span class="glyphicon glyphicon-comment"
              aria-hidden="true"></span> Comments </a>
          <a href="/admin/users" class="list-group-item"><span class="glyphicon glyphicon-user"
              aria-hidden="true"></span> Users </a>
          <a href="/admin/settings" class="list-group-item"><span class="glyphicon glyphicon-wrench"
              aria-hidden="true"></span>
            Settings <span class="badge"></span></a>
        </div>
      </div>
      <div class="col-md-9">
        <!-- Website Overview -->
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Edit Post</h3>
          </div>
          <div class="panel-body">
            <form action="/admin/posts/update/{{post.id}}" method="POST">
              
              {{#if hasError}}
                {{#each errors}}
                  <div class="btn btn-danger">
                    {{this}}
                  </div>
                {{/each}}
              {{/if}}

              <div class="form-group">
                <label>Post Title</label>
                <input name="postTitle" type="text" class="form-control" value="{{post.title}}" placeholder="Post Title" required>
              </div>
              <div class="form-group">
                <label>Post Slug</label>
                <input name="postSlug" type="text" class="form-control" value="{{post.slug}}" placeholder="Post slug" required>
              </div>
              <div class="form-group">
                <label>Post Body</label>
                <textarea name="editor1" class="form-control" placeholder="Post Body">
                  {{post.content}}
                </textarea>
              </div>
              <label>Author</label>
              <div class="form-group">
                <select name="author" class="form-control">
                  {{#each users}}
                  <option value="{{this.id}}" {{#isPostAuthor this.id}} selected {{/isPostAuthor}} > 
                    {{this.full_name}} 
                  </option>
                  {{/each}}
                </select>
              </div>
              <label>Status</label>
              <div class="checkbox">
                <label>
                  <input name="status" type="radio" value="0" {{#postStatus 0}} checked {{/postStatus}}> Draft
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input name="status" type="radio" value="1" {{#postStatus 1}} checked {{/postStatus}}> Reviewing
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input name="status" type="radio" value="2" {{#postStatus 2}} checked {{/postStatus}}> Published
                </label>
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>