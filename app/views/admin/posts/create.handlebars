<header id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1><span class="glyphicon glyphicon-text-width" aria-hidden="true"></span> Edit Post<small> Write new
              article</small></h1>
        </div>
      </div>
    </div>
  </header>

  <section id="breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/posts">Posts</a></li>
        <li class="active">Edit Page</li>
      </ol>
    </div>
  </section>

  <section id="main">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <a href="/admin/dashboard" class="list-group-item">
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Dashboard
            </a>
            <a href="/admin/posts" class="list-group-item"><span class="glyphicon glyphicon-pencil"
                aria-hidden="true"></span> Posts <span class="badge">7</span></a>
            <a href="/admin/comments" class="list-group-item"><span class="glyphicon glyphicon-comment"
                aria-hidden="true"></span> Comments <span class="badge">12</span></a>
            <a href="/admin/users" class="list-group-item"><span class="glyphicon glyphicon-user"
                aria-hidden="true"></span> Users <span class="badge">3</span></a>
            <a href="/admin/settings" class="list-group-item"><span class="glyphicon glyphicon-wrench"
                aria-hidden="true"></span>
              Settings <span class="badge"></span></a>
          </div>
        </div>
        <div class="col-md-9">
          <!-- Website Overview -->
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title">Edit Post</h3>
            </div>
            <div class="panel-body">
              <form action="/admin/posts/store" method="POST">
                <div class="form-group">
                  <label>Post Title</label>
                  <input name="postTitle" type="text" class="form-control" placeholder="Post Title" value="">
                </div>
                <div class="form-group">
                  <label>Post Slug</label>
                  <input name="postSlug" type="text" class="form-control" placeholder="Post slug">
                </div>
                <div class="form-group">
                  <label>Post Body</label>
                  <textarea name="editor1" class="form-control" placeholder="Post Body">
                      
                    </textarea>
                </div>
                <label>Author</label>
                <div class="form-group">
                  <select name="author" class="form-control">
                    {{#each users}}
                      <option value="{{this.id}}"> {{this.full_name}} </option>
                    {{/each}}
                  </select>
                </div>
                <label>Status</label>
                <div class="checkbox">
                  <label>
                    <input name="status" type="checkbox" value="0"> Draft
                  </label>
                </div>
                <div class="checkbox">
                  <label>
                    <input name="status" type="checkbox" value="1"> Reviewing
                  </label>
                </div>
                <div class="checkbox">
                  <label>
                    <input name="status" type="checkbox" value="2"> Published
                  </label>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              </form>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>